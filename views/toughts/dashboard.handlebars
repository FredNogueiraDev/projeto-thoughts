<div class="dashboard">
    <div class="title-container">
        <h1>Dashboard</h1>
        <a href="/toughts/add" class="btn-tought">Criar Thought</a>
    </div>
    <ul>
        {{#each toughts}}
        <li>
            <span class="label">{{this.title}}</span>
            <span class="actions">
                <a href="/toughts/edit/{{this.id}}" class="btn-action">Editar</a>
                <form action="/toughts/remove" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="submit" value="Excluir" class="btn-action">
                </form>
            </span>
        </li>
        {{/each}}
    </ul>
    {{#if emptyToughts}}
        <p>Não há nada por aqui... crie seu primeiro pensamento <a href="/toughts/add">por aqui!</a></p>
    {{/if}}
</div>